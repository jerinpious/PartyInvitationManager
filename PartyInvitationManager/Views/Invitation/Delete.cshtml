@model PartyInvitationManager.Models.Invitation

<h2>Are you sure you want to delete this invitation?</h2>

<p><strong>Guest Name:</strong> @Model.GuestName</p>
<p><strong>Email:</strong> @Model.GuestEmail</p>
<p><strong>Party:</strong> @Model.Party.Name</p>
<p><strong>Status:</strong> @Model.Status</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
