@model PartyInvitationManager.ViewModels.InvitationResponseViewModel

@{
    ViewData["Title"] = "Thank You";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Thank You for Responding!</h2>
                </div>
                <div class="card-body">
                    <h3>Hello @Model.GuestName,</h3>

                    @if (Model.WillAttend == true)
                    {
                        <div class="alert alert-success">
                            <h4><i class="bi bi-check-circle-fill me-2"></i>Great! We're looking forward to seeing you!</h4>
                            <p>We've recorded that you will be attending <strong>@Model.PartyDescription</strong>.</p>
                        </div>

                        <div class="card mb-4">
                            <div class="card-body">
                                <h5>Party Details</h5>
                                <p><strong>Date:</strong> @Model.PartyDate.ToString("dddd, MMMM d, yyyy at h:mm tt")</p>
                                <p><strong>Location:</strong> @Model.PartyLocation</p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <h4><i class="bi bi-info-circle-fill me-2"></i>We're sorry you can't make it.</h4>
                            <p>We've recorded that you won't be attending <strong>@Model.PartyDescription</strong>.</p>
                            <p>Maybe next time!</p>
                        </div>
                    }

                    <p>Thank you for letting us know about your attendance.</p>
                </div>
                @if (ViewBag.FirstVisit == true)
                {
                    <div class="card-footer bg-light">
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle-fill me-2"></i> Welcome to our Party Invitation Manager!
                        </div>
                    </div>
                }
                else
                {
                    <div class="card-footer bg-light text-muted">
                        <small>You first visited this site on: @ViewBag.FirstVisitDate</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>