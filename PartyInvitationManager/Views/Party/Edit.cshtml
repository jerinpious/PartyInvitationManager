@model PartyInvitationManager.ViewModels.EditPartyViewModel
@{
    ViewData["Title"] = "Edit Party";
}

<h1>Edit this party</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PartyId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventDate">Date</label>
        <input asp-for="EventDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Manage" asp-route-id="@Model.PartyId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}