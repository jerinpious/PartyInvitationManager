@model List<PartyInvitationManager.ViewModels.PartyViewModel>
@{
    ViewData["Title"] = "All Parties";
}

<h1>All my parties</h1>
<a asp-action="Create" class="btn btn-primary">Create new party</a>

@if (!Model.Any())
{
    <p>No parties found. Create your first party to get started!</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Description</th>
                <th>Date</th>
                <th>Location</th>
                <th># of invites</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var party in Model)
            {
                <tr>
                    <td>@party.Description</td>
                    <td>@party.EventDate.ToString("MM/dd/yyyy h:mm tt")</td>
                    <td>@(string.IsNullOrEmpty(party.Location) ? "-" : party.Location)</td>
                    <td>@party.InvitationCount</td>
                    <td>
                        <a asp-action="Manage" asp-route-id="@party.PartyId">Manage</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}